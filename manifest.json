{
	"manifest_version": 2,
	"name": "Tab to Window/Popup - Keyboard Shortcut",
	"short_name": "Tab 2 Window",
	"version": "2.2.6",
	"author": "Arthur Carabott",

	"description": "Add a keyboard shortcut to move the current tab to a new window or popup.",
	"minimum_chrome_version": "25",

	"icons": {
		"16": "icons/ttw16.png",
		"48": "icons/ttw48.png",
		"128": "icons/ttw128.png"
	},


	"background": {
		"scripts": ["js/defaults.js", "js/ttw.js"],
		"persistent": false
	},

	"commands": {
		"tab-to-window-normal": {
			"suggested_key": {
				"default": "Alt+X",
				"linux": "Alt+Shift+X"
			},
			"description": "Tab to window"
		},
		"tab-to-window-popup": {
			"suggested_key": {
				"default": "Alt+C",
				"linux": "Alt+Shift+C"
			},
			"description": "Tab to popup window"
		},
		"window-to-tab": {
			"suggested_key": {
				"default": "Alt+Z",
				"linux": "Alt+Shift+Z"
			},
			"description": "Undo tab to window"
		}
	},
	"permissions": ["tabs"],
	"options_page": "options.html",
	"options_ui": {
		"page": "options.html",
		"chrome_style": true
	}
}
